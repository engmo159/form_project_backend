{
  "compilerOptions": {
    "lib": ["es6"],
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",

    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
